<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#00000000"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/search_food_details_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="5" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                      android:visibility="invisible"
                    android:background="@drawable/txv_bg"
                    android:gravity="top|center"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/txv_rate"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="10 % off"
                      
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- <ImageView -->
                    <!-- android:id="@+id/photo_imageview" -->
                    <!-- android:layout_width="wrap_content" -->
                    <!-- android:layout_height="match_parent" -->
                    <!-- android:layout_weight="1" -->
                    <!-- android:contentDescription="@string/Blank" -->
                    <!-- android:src="@drawable/photos_size" /> -->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="5" >

                        <TextView
                            android:id="@+id/hotel_name_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_weight="2.5"
                            android:text="@string/Restaurant_name"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_time_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_weight="2.5"
                            android:gravity="left|center"
                            android:text="@string/order_time"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle="bold"
                            android:textColor="#27F5E0"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="top"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/hotel_address_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:gravity="left|center"
                            android:text="@string/order_address"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/black_line_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="invisible"
                        android:src="@drawable/black_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal"
                        android:weightSum="5" >

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:max="5"
                            android:numStars="5"
                            android:progressDrawable="@drawable/ratingbar_golden" />
                        <!-- style="@style/foodRatingBar" -->


                        <!-- <RatingBar -->
                        <!-- android:id="@+id/ratingBar1" -->
                        <!-- android:layout_width="wrap_content" -->
                        <!-- android:layout_height="wrap_content" -->
                        <!-- android:numStars="5" -->
                        <!-- style="?android:attr/ratingBarStyleSmall" -->
                        <!-- /> -->

                        <TextView
                            android:id="@+id/review_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="2"
                            android:gravity="left|center"
                            android:text="@string/Ratings"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#27F5E0"
                            android:textStyle="bold"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <!-- <Button -->
                    <!-- android:id="@+id/pickup_button" -->
                    <!-- style="?android:attr/buttonStyleSmall" -->
                    <!-- android:layout_width="match_parent" -->
                    <!-- android:layout_height="wrap_content" -->
                    <!-- android:gravity="center" -->
                    <!-- android:textColor="@android:color/white" -->
                    <!-- android:background="#24a25f" -->
                    <!-- android:text="@string/Pickup" /> -->
                    <!-- <Button -->
                    <!-- android:id="@+id/delivery_buuton" -->
                    <!-- style="?android:attr/buttonStyleSmall" -->
                    <!-- android:layout_width="match_parent" -->
                    <!-- android:layout_height="wrap_content" -->
                    <!-- android:layout_marginTop="5dp" -->
                    <!-- android:gravity="center" -->
                    <!-- android:textColor="@android:color/white" -->
                    <!-- android:background="#24a25f" -->
                    <!-- android:text="@string/Delivery" /> -->

                    <TextView
                        android:id="@+id/pickup_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#24a25f"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="@string/Pickup"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/white"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/delivery_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#24a25f"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="@string/Delivery"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/white"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/txv_indine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#24a25f"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="@string/Indine"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/white"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boarder_line_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:background="#70000000"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/txv_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="0/10"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txv_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="1-km"
                android:textColor="@android:color/white" />
            
            <TextView
                android:id="@+id/txt_cuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Indian Food"
                android:textColor="@android:color/white" />
            
        </LinearLayout>
    </LinearLayout>

    <!-- <LinearLayout -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="0dp" -->
    <!-- android:layout_weight="50" -->
    <!-- android:orientation="vertical" -->
    <!-- android:visibility="invisible" > -->
    <!-- </LinearLayout> -->

</LinearLayout>