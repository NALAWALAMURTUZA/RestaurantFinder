<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout
                    android:id="@+id/popup_ly_offer_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/offer_ly_box"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="5" >

                    <LinearLayout
                        android:id="@+id/desc_boarder_line_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#bcbcbc"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/boarder_line_img1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:contentDescription="@string/Blank"
                            android:src="@drawable/payment_boarder_line"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:orientation="horizontal"
                        android:weightSum="5" >

                        <TextView
                            android:id="@+id/txv_Test_offer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|center"
                            android:text="@string/payment_test_Offer"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/Offer_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                             android:textColor="#000000"
                            android:textSize="16sp" 
                             android:textAppearance="?android:attr/textAppearanceSmall"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/txv_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:text="@string/payment_Offer_discount"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#EA1111"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txv_disc_onorder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:gravity="left|center"
                            android:paddingLeft="5dp"
                            android:text="@string/payment_Offer_discount_order"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="16sp" />

                        
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="5" >

                        <TextView
                            android:id="@+id/txv_offers_desc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2.5"
                            android:gravity="left|center"
                            android:text="@string/payment_Offer_discount_details"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txv_desc_invisible"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/payment_Offer_discount"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="16sp"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/txv_Apply"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="#5ab445"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/payment_Offer_apply"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@android:color/white"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/apply_boarder_line_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="#bcbcbc"
                        android:orientation="vertical"
                        android:visibility="invisible" >

                        <ImageView
                            android:id="@+id/apply_boarder_line_img"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:contentDescription="@string/Blank"
                            android:src="@drawable/payment_boarder_line"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>
</LinearLayout>
