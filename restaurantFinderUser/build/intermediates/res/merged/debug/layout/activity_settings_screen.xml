<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- Header -->

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#83a1e1"
        android:orientation="vertical"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5" >

            <ImageView
                android:id="@+id/back_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:contentDescription="@string/Blank"
                android:src="@drawable/back_img"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/search_imageview_logo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="3"
                android:contentDescription="@string/Blank"
                android:src="@drawable/second_screen_logo" />

            <ImageView
                android:id="@+id/search_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:contentDescription="@string/Blank"
                android:src="@drawable/header_search_icon" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:background="#efefef"
        android:gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:gravity="bottom|center"
            android:orientation="vertical"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:src="@drawable/woman" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="50"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="7.15"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/img_my_booking"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7.15"
                    android:contentDescription="@string/Blank"
                    android:src="@drawable/my_booking_button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="7.15"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_myprofile"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7.15"
                    android:contentDescription="@string/Blank"
                    android:src="@drawable/my_profile_button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="7.15"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_network"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7.15"
                    android:contentDescription="@string/Blank"
                    android:src="@drawable/my_networking_button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="7.15"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_aboutrest"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7.15"
                    android:contentDescription="@string/Blank"
                    android:src="@drawable/about_us_button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="7.15"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7.15"
                    android:contentDescription="@string/Blank"
                    android:src="@drawable/change_password" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="7.15"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/img_loyalty_rewards"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7.15"
                    android:contentDescription="@string/Blank"
                    android:src="@drawable/my_loyalty_rewards_button" />

                <!-- <EditText -->
                <!-- android:id="@+id/img_loyalty_rewards" -->
                <!-- android:layout_width="match_parent" -->
                <!-- android:layout_marginLeft="20dp" -->
                <!-- android:layout_marginRight="20dp" -->
                <!-- android:layout_height="0dp" -->
                <!-- android:layout_weight="10" -->
                <!-- android:textSize="12sp" -->
                <!-- android:editable="false" -->
                <!-- android:textColor="#ffffff" -->
                <!-- android:drawablePadding="15dp" -->
                <!-- android:background="@drawable/rounded_corner" -->
                <!-- android:drawableLeft="@drawable/man_icon_booking_screen" -->
                <!-- android:text="Loyalty Rewards" -->
                <!-- /> -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="7.15"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/img_logout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7.15"
                    android:contentDescription="@string/Blank"
                    android:src="@drawable/logout" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_weight="20"
            android:background="#efefef"
            android:gravity="bottom|center"
            android:orientation="vertical"
            android:visibility="invisible" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:contentDescription="@string/Blank"
                android:src="@drawable/logout"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#83a1e1"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/footer_ordernow_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.5"
                android:contentDescription="@string/Blank"
                android:src="@drawable/ordernow" />

            <ImageView
                android:id="@+id/footer_viewmenu_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.5"
                android:contentDescription="@string/Blank"
                android:src="@drawable/viewmenu" />

            <ImageView
                android:id="@+id/footer_featured_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.5"
                android:contentDescription="@string/Blank"
                android:src="@drawable/featured" />

            <ImageView
                android:id="@+id/footer_setting_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.5"
                android:contentDescription="@string/Blank"
                android:src="@drawable/setting" />
        </LinearLayout>
    </LinearLayout>
