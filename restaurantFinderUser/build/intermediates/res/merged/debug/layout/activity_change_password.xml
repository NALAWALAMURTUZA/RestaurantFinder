<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#dcdcd9"
	android:orientation="vertical" >

	<!-- Header aligned to top -->

	<LinearLayout
		android:id="@+id/rf_login_img_header"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="10"
		 android:background="#83a1e1"
		android:orientation="horizontal" >

		<ImageView
			android:id="@+id/rf_login_img_header_icon"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="left|center"
			android:layout_weight="1"
			android:visibility="invisible"
			android:src="@drawable/ic_launcher" />

		<ImageView
			android:id="@+id/img_menu"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="left|center"
			android:layout_weight="1"
			android:src="@drawable/ic_launcher"
			android:visibility="invisible" />

		<TextView
			android:id="@+id/rf_supper_admin_txv_changepassword"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="8"
			android:gravity="center"
			android:text="@string/rf_user_txv_changepassword"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@android:color/white"
			 />

		<ImageView
			android:id="@+id/img"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="left|center"
			android:layout_weight="1"
			android:contentDescription="@string/Blank"
			android:src="@drawable/ic_launcher"
			android:visibility="invisible" />

		<ImageView
			android:id="@+id/img_logo"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:contentDescription="@string/Blank"
			android:layout_weight="1"
			android:src="@drawable/ic_launcher"
			android:visibility="invisible" />
	</LinearLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="10dp"
		android:layout_weight="90" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="horizontal" >

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="10"
				android:orientation="vertical" >
			</LinearLayout>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:padding="5dp"
				android:layout_weight="60"
				android:background="@drawable/rounded_corner"
				android:orientation="vertical" >

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="25"
					android:orientation="vertical" >
					
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_marginLeft="2dp"
						android:layout_marginRight="2dp"
						android:layout_marginTop="5dp"
						android:layout_weight="10"
						android:gravity="center"
						android:orientation="horizontal" >

						<TextView
							android:id="@+id/txv_oldpassword"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="2.2"
							android:visibility="gone"
							android:text="@string/txv_oldpassword"
							android:textSize="14sp"
							android:typeface="serif" />

						<EditText
							android:id="@+id/rf_profile_ed_oldpassword"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="2.8"
							android:background="@drawable/rf_text_box"
							android:gravity="left|center"
							android:hint="@string/rf_profile_ed_oldpassword"
							android:inputType="textPassword"
							android:paddingLeft="5dp"
							android:textSize="12sp" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_marginLeft="2dp"
						android:layout_marginRight="2dp"
						android:layout_marginTop="5dp"
						android:layout_weight="10"
						android:gravity="center"
						android:orientation="horizontal" >

						<TextView
							android:id="@+id/txv_newpassword"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="2.2"
							android:visibility="gone"
							android:text="@string/txv_newpassword"
							android:textSize="14sp"
							android:typeface="serif" />

						
						<EditText
							android:id="@+id/rf_profile_ed_newpassword"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="2.8"
							
							android:background="@drawable/rf_text_box"
							android:gravity="left|center"
							android:hint="@string/rf_profile_ed_newpassword"
							android:inputType="textPassword"
							android:paddingLeft="5dp"
							android:textSize="12sp" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_marginLeft="2dp"
						android:layout_marginRight="2dp"
						android:layout_marginTop="5dp"
						android:layout_weight="10"
						android:gravity="center"
						android:orientation="horizontal" >

						<TextView
							android:id="@+id/txv_resetpassword"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="2.2"
							android:text="@string/txv_retypepassword"
							android:textSize="14sp"
							android:visibility="gone"
							android:typeface="serif" />

						<EditText
							android:id="@+id/rf_profile_ed_retypepassword"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="2.8"
							android:background="@drawable/rf_text_box"
							android:gravity="center_vertical"
							android:hint="@string/rf_profile_ed_resetpassword"
							android:inputType="textPassword"
							android:paddingLeft="5dp"
							android:textSize="12sp" />
					</LinearLayout>

					

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_marginLeft="5dp"
						android:layout_marginRight="5dp"
						android:layout_marginTop="10dp"
						android:layout_weight="5"
						android:gravity="center"
						android:orientation="horizontal"
						android:visibility="invisible" >

						
					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_marginTop="10dp"
						android:layout_weight="10"
						android:gravity="center"
						android:orientation="horizontal" >

						<Button
							android:id="@+id/btn_ok"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginLeft="10dp"
							android:layout_weight="2"
							android:background="@drawable/ok_button"
							android:textColor="#ffffff"
							android:textSize="30sp"
							android:visibility="visible" />

						<Button
							android:id="@+id/btn"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="0.5"
							android:background="@drawable/rf_button_box"
							android:gravity="center"
							android:text="Edit"
							android:textColor="#FFFFFF"
							android:textSize="14sp"
							android:visibility="invisible" />

						<Button
							android:id="@+id/btn_cancel"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginRight="10dp"
							android:layout_weight="2"
							android:background="@drawable/cancel_button"
							android:textSize="30sp"
							android:visibility="visible" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="10"
				android:orientation="vertical" >
			</LinearLayout>
		</LinearLayout>
	</ScrollView>

</LinearLayout>