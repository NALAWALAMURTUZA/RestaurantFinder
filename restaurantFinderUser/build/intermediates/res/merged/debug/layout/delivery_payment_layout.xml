	<!-- ly_Payment_desc start -->

	<LinearLayout
		android:id="@+id/ly_Payment_desc"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="5"
		android:gravity="center"
		android:orientation="vertical" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_gravity="left|center"
			android:layout_weight="4.5"
			android:gravity="center"
			android:orientation="vertical" >

			<TextView
				android:id="@+id/txv_payment_title"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="left|center"
				android:layout_marginLeft="10dp"
				android:gravity="left|center"
				android:text="@string/checkout_Payment"
				android:textColor="#162880"
				android:textSize="14sp"
				android:textStyle="bold" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/payment_boarder_line_layout"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginTop="2dp"
			android:layout_weight="0.5"
			android:orientation="vertical" >

			<ImageView
				android:id="@+id/payment_boarder_line_img"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="left|center"
				android:contentDescription="@string/Blank"
				android:src="@drawable/boarder_line" />
		</LinearLayout>
	</LinearLayout>

