	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="10dp"
		android:layout_weight="10"
		android:gravity="center"
		android:orientation="vertical" >

		<LinearLayout
			android:id="@+id/lv_border"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="0.5"
			android:orientation="horizontal" >

			<ImageView
				android:id="@+id/lv_border_img"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="left|center"
				android:layout_marginTop="2dp"
				android:contentDescription="@string/Blank"
				android:src="@drawable/boarder_line" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="right|center"
			android:orientation="horizontal" >

			<TextView
				android:id="@+id/txv_cart_value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="right|center"
				android:text="@string/payment_Delivery_charge"
				android:textColor="#162880"
				android:textSize="12sp" />

			<TextView
				android:id="@+id/txv_Payment_delivery_charge"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="center"
				android:paddingRight="5dp"
				android:text="@string/payment_Sr"
				android:textColor="#162880"
				android:textSize="12sp" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/ly_boarder_line_layout"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="0.5"
			android:orientation="horizontal" >

			<ImageView
				android:id="@+id/ly_boarder_line_img"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="left|center"
				android:layout_marginTop="2dp"
				android:contentDescription="@string/Blank"
				android:src="@drawable/payment_boarder_line" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginTop="5dp"
			android:layout_weight="1"
			android:gravity="right|center"
			android:orientation="horizontal" >

			<TextView
				android:id="@+id/txv_cart_total"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="right|center"
				android:text="@string/payment_Total"
				android:textColor="#162880"
				android:textSize="12sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/payment_txv_total"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="center"
				android:paddingRight="5dp"
				android:text="@string/payment_Sr"
				android:textColor="#162880"
				android:textSize="12sp"
				android:textStyle="bold" />
		</LinearLayout>
	</LinearLayout>

	<!-- ly_Payment_desc fifnish -->


	<!-- ly_border start -->

	<LinearLayout
		android:id="@+id/total_boarder_line_layout"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="5dp"
		android:layout_weight="0.5"
		android:background="#bcbcbc"
		android:orientation="vertical" >

		<ImageView
			android:id="@+id/total_boarder_line_img"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="left|center"
			android:contentDescription="@string/Blank"
			android:src="@drawable/payment_boarder_line"
			android:visibility="invisible" />

		<ImageView
			android:id="@+id/boarder_line_img2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="left|center"
			android:contentDescription="@string/Blank"
			android:src="@drawable/payment_boarder_line"
			android:visibility="invisible" />

		<ImageView
			android:id="@+id/boarder_line_img3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="left|center"
			android:contentDescription="@string/Blank"
			android:src="@drawable/payment_boarder_line"
			android:visibility="invisible" />
	</LinearLayout>
	<!-- ly_border finish -->


	<!-- ly_Offer_desc start -->

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="24.5"
		android:orientation="vertical" >

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical" >

			<LinearLayout
				android:id="@+id/ly_Offer_desc"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="15"
				android:gravity="center"
				android:orientation="vertical" >

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:gravity="center"
					android:visibility="gone"
					android:orientation="vertical" >

					<TextView
						android:id="@+id/txv_offer_title"
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_gravity="left|center"
						android:layout_marginLeft="10dp"
						android:layout_weight="3.7"
						android:gravity="left|center"
						android:text="@string/payment_Offer"
						android:textColor="#162880"
						android:textSize="14sp"
						android:textStyle="bold" />
				</LinearLayout>

				<LinearLayout
					android:id="@+id/offer_boarder_line_layout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:visibility="gone"
					android:orientation="horizontal" >

					<ImageView
						android:id="@+id/offer_boarder_line_img"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="left|center"
						android:layout_marginTop="2dp"
						android:contentDescription="@string/Blank"
						android:src="@drawable/boarder_line" />
				</LinearLayout>

				<LinearLayout
					android:id="@+id/ly_offer"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_marginTop="5dp"
					android:background="@drawable/offer_ly_box"
					android:gravity="center"
					android:visibility="gone"
					android:orientation="horizontal"
					android:weightSum="5" >

					<TextView
						android:id="@+id/txv_offfer_name"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_weight="4"
						android:gravity="left|center"
						android:paddingLeft="15dp"
						android:text="@string/payment_test_Offer"
						android:textAppearance="?android:attr/textAppearanceLarge"
						android:textSize="16sp" />

					<ImageView
						android:id="@+id/img_offer_arrow"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:contentDescription="@string/Blank"
						android:src="@drawable/listview_categories_img" />
				</LinearLayout>

				<!-- GONE LAYOUT ly_offers_description START -->

				<LinearLayout
					android:id="@+id/ly_offers_description_popup"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:gravity="center"
					android:orientation="vertical"
					android:visibility="gone"
					android:weightSum="5" >

					<LinearLayout
						android:id="@+id/desc_boarder_line_layout"
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_weight="1"
						android:background="#bcbcbc"
						android:orientation="vertical" >

						<ListView
							android:id="@+id/lv_cart_details"
							android:layout_width="match_parent"
							android:layout_height="wrap_content" >
						</ListView>
					</LinearLayout>
				</LinearLayout>

				<!-- GONE LAYOUT ly_offers_description FINISH -->

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:visibility="invisible"
					android:gravity="center"
					android:orientation="vertical" >

					<TextView
						android:id="@+id/txv_select_method_title"
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_gravity="left|center"
						android:layout_marginLeft="10dp"
						android:layout_weight="3.7"
						android:gravity="left|center"
						android:text="@string/payment_Method"
						android:textColor="#162880"
						android:textSize="14sp"
						android:textStyle="bold" />
				</LinearLayout>

				<LinearLayout
					android:id="@+id/method_boarder_line_layout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:visibility="invisible"
					android:orientation="horizontal" >

					<ImageView
						android:id="@+id/method_boarder_line_img"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="left|center"
						android:layout_marginTop="2dp"
						android:contentDescription="@string/Blank"
						android:src="@drawable/boarder_line" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="left|center"
					android:visibility="invisible"
					android:orientation="horizontal" >

					<RadioButton
						android:id="@+id/rdbtn_select_method"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="left|center"
						android:layout_marginLeft="5dp"
						android:button="@drawable/rdbtn_selector"
						android:clickable="true"
						android:text="" />

					<TextView
						android:id="@+id/txv_rdbtn_select_method"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="5dp"
						android:text="" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="30dp"
					android:layout_marginRight="30dp"
					android:gravity="center"
					android:orientation="vertical" >

					<TextView
						android:id="@+id/txv_continue"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="30dp"
						android:layout_marginRight="30dp"
						android:background="@drawable/continue_background"
						android:gravity="center"
						android:text="@string/payment_Continue_to_next"
						android:textColor="@android:color/white"
						android:textSize="14sp"
						android:textStyle="bold" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	<!-- ly_Offer_desc finish -->


