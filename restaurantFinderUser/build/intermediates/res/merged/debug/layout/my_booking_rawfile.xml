<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5" >

        <TextView
            android:id="@+id/txt_rest_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left|center"
            android:text=""
            android:textColor="#162880"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="@string/Status"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left|center"
            android:text=""
            android:textColor="#162880"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5" >

        <TextView
            android:id="@+id/txt_city_country_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="left|center"
            android:text=""
            android:textColor="#162880"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
    
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5" >

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="left|center"
            android:text=""
            android:textColor="#162880"
            android:textSize="16sp"
            android:textStyle="bold" />
        
         <TextView
            android:id="@+id/txt_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="left|center"
            android:text=""
            android:textColor="#162880"
            android:textSize="16sp"
            android:textStyle="bold" />
         
          <TextView
            android:id="@+id/txt_no_of_pers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left|center"
            android:text=""
            android:textColor="#162880"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5" >
          
         <TextView
            android:id="@+id/order_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="left|center"
            android:textColor="#162880"
            android:visibility="visible"
            android:textSize="16sp"
            android:textStyle="bold" /> 
            
         
          <TextView
            android:id="@+id/order_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left|center"
            android:text="@string/order_details"
            android:textColor="#162880"
            android:visibility="gone"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold" />
         
         

        <TextView
            android:id="@+id/discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="left|center"
            android:text=""
            android:textColor="#162880"
            android:visibility="gone"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout> 
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5" >

          <ImageView
              android:id="@+id/img_detail"
              android:layout_width="0dp"
              android:layout_weight="2.5"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:contentDescription="@string/Blank"
              android:src="@drawable/detail_button" />
          
          <ImageView
              android:id="@+id/img_cancel"
               android:layout_width="0dp"
              android:layout_weight="2.5"
              android:layout_height="wrap_content"
              android:padding="5dp"
               android:contentDescription="@string/Blank"
              android:src="@drawable/rf_my_booking_cancel_button" />
          
            <ImageView
              android:id="@+id/img_post_review"
               android:layout_width="0dp"
              android:layout_weight="2.5"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:padding="5dp"
               android:contentDescription="@string/Blank"
              android:src="@drawable/rf_my_booking_post_a_reviews_button" />
        
    </LinearLayout> 
    
    

