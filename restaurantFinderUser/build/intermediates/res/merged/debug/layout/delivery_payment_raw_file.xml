<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ly_Payment_desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txv_cart_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/payment_rawfile_index"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txv_cart_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:text="@string/payment_rawfile_item_name"
            android:textSize="12sp" />
        
        <TextView
            android:id="@+id/txv_cart_spicy_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:textSize="12sp" />
        
        
        <TextView
            android:id="@+id/txv_cart_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:text="@string/payment_rawfile_item_quantity"
            android:textSize="12sp" />
         <TextView
            android:id="@+id/txv_cart_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:text="@string/payment_rawfile_item_SR"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout><!-- From: file:/D:/workspace/RestaurantFinder/restaurantFinderUser/src/main/res/layout/delivery_payment_raw_file.xml -->