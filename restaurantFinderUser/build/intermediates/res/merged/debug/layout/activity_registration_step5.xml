<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Header aligned to top -->

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#77D7FA"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_icon"
            android:visibility="invisible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center"
            android:text="@string/regstep5_title"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/filter_icon"
            android:visibility="invisible" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:background="#E8E4E2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="90" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/rf_bk_tv_format"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:hint="@string/str_frm"
                            android:textColorHint="#000000"
                            android:textSize="16sp" />

                        <RadioGroup
                            android:id="@+id/rf_bk_formate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="3.5"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:visibility="gone"
                                android:id="@+id/rf_bk_french"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.7"
                                android:checked="true"
                                android:text="@string/str_french"
                                android:textSize="12sp" />

                            <RadioButton
                                android:id="@+id/rf_bk_iban"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.7"
                                android:checked="true"
                                android:clickable="false"
                                android:text="@string/str_iban"
                                android:textSize="12sp" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:visibility="gone"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_bic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:hint="@string/str_bic"
                            android:textColorHint="#000000"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/ed_bic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3.5"
                            android:background="@drawable/text_box"
                            android:ems="10"
                            android:hint="@string/ed_bic"
                            android:paddingLeft="5dp"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="5"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:hint="@string/str_iban"
                            android:textColorHint="#000000"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/ed_iban"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3.5"
                            android:background="@drawable/text_box"
                            android:ems="10"
                            android:hint="@string/editText2"
                            android:paddingLeft="5dp"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="5"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/tv_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:hint="@string/str_hint"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:visibility="gone"
                        android:gravity="bottom|center" >

                        <TextView
                            android:id="@+id/tv_hint1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:hint="@string/str_hint1"
                            android:textColorHint="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="5"
                        android:gravity="left|center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/rf_bk_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:hint="@string/str_num"
                            android:textColorHint="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txv_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/text_box"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/ed_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/text_box"
                            android:ems="10"
                            android:inputType="phone"
                            android:paddingLeft="5dp"
                            android:textSize="14sp" >
                        </EditText>

                        <EditText
                            android:id="@+id/ed_no1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:background="@drawable/text_box"
                            android:ems="10"
                            android:visibility="invisible" >
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="5"
                        android:gravity="left|center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="left|center"
                            android:hint="@string/str_email"
                            android:textColorHint="#000000"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/ed_email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:background="@drawable/text_box"
                            android:ems="10"
                            android:hint="@string/ed_email"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="5dp"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/ed_no2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:background="@drawable/text_box"
                            android:ems="10"
                            android:visibility="invisible" >
                        </EditText>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/rf_bk_email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:hint="@string/terms_condi"
                            android:textColorHint="#000000"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/ch_terms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                             android:button="@drawable/rdbtn_selector"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp" >

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:background="#253E66"
                            android:text="Validate"
                            android:textColor="#ffffff"
                            android:visibility="invisible" />

                        <Button
                            android:id="@+id/btn_validate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:background="#2f56b3"
                            android:padding="3dp"
                            android:text="@string/regstep5_validate"
                            android:textColor="#ffffff" />

                        <Button
                            android:id="@+id/btn1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:background="#253E66"
                            android:text="Validate"
                            android:textColor="#ffffff"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/D:/workspace/RestaurantFinder/restaurantFinderUser/src/main/res/layout/activity_registration_step5.xml -->