<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@drawable/rf_supper_admin_header_background"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/rf_supper_admin_home_icon"
            android:visibility="visible" />

        <TextView
            android:id="@+id/rf_supper_admin_header_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:text="@string/ab_title"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="90"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="#eeeeee"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp" >

            <TextView
                android:id="@+id/txv_all_default"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/roundcorner_all_booking"
                android:gravity="center"
                android:text="@string/ab_all"
                android:textColor="#000000"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txv_all_select"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/text_box"
                android:gravity="center"
                android:text="@string/ab_all"
                android:textColor="#000000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txv_online_default"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/roundcorner_all_booking"
                android:gravity="center"
                android:text="@string/ab_oo"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txv_online_select"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/text_box"
                android:gravity="center"
                android:text="@string/ab_oo"
                android:textColor="#000000"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txv_grabbing_default"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/roundcorner_all_booking"
                android:gravity="center"
                android:text="@string/ab_tg"
                android:textColor="#000000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txv_grabbing_select"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="2"
                android:background="@drawable/text_box"
                android:gravity="center"
                android:text="@string/ab_tg"
                android:textColor="#000000"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txv_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/text_box"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:text="@string/ab_date"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/sp_meals"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="2"
                android:background="@drawable/text_box"
                android:entries="@array/array_meal"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:visibility="gone" />

            <AutoCompleteTextView
                android:id="@+id/ed_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="2"
                android:background="@drawable/text_box"
                android:drawableRight="@drawable/search"
                android:gravity="left|center"
                android:hint="@string/ab_search"
                android:inputType="textAutoComplete|textAutoCorrect"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="#eeeeee"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/roundcorner_all_booking"
                android:gravity="center"
                android:text="@string/ab_date"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/roundcorner_all_booking"
                android:gravity="center"
                android:text="@string/ab_type"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/roundcorner_all_booking"
                android:gravity="center"
                android:text="@string/ab_name"
                 android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/roundcorner_all_booking"
                android:gravity="center"
                android:text="@string/ab_per"
                 android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/roundcorner_all_booking"
                android:gravity="center"
                android:text="@string/ab_status"
                 android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/roundcorner_all_booking"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/ab_action"
                 android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:background="@drawable/rounded_corner7"
            android:orientation="horizontal" >

            <ListView
                android:id="@+id/lv_all_booking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" >
            </ListView>

            <TextView
                android:id="@+id/txv_nodata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="No Data found"
                android:textSize="24sp"
                android:visibility="visible" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/workspace/RestaurantFinder/restaurantAdmin/src/main/res/layout/activity_all_booking.xml -->