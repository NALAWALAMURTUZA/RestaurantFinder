<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <!-- Header aligned to top -->

    <LinearLayout
        android:id="@+id/rf_login_img_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@drawable/rf_supper_admin_header_background"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/rf_login_img_header_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="2"
            android:src="@drawable/rf_supper_admin_home_icon"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="0.5"
            android:src="@drawable/ic_launcher"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/rf_admin_heade_cat_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="35sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="0.5"
            android:src="@drawable/ic_launcher"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:src="@drawable/filter_icon"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:layout_weight="15"
        android:background="@drawable/rounded_corner4"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/rf_admin_tv_Img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rf_admin_tv_img"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rf_admin_tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/af_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rf_admin_tv_add_food_description"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rf_admin_tv_add_food_description"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rf_admin_add_food_food_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/af_fc"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rf_admin_tv_add_food_test_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="@string/rf_admin_tv_add_food_test_type"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rf_admin_tv_add_food_level_of_test"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rf_admin_tv_add_food_level_of_test"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rf_admin_tv_add_food_available"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.9"
            android:gravity="center"
            android:text="@string/af_availab"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rf_admin_tv_add_food_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/rf_admin_tv_add_food_price"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rf_admin_tv_add_food_subitem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/rf_admin_tv_add_food_subitem"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rf_admin_tv_add_food_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="@string/af_action"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:padding="3dp" >

        <ListView
            android:id="@+id/lv_parentfood"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="15"
        android:background="@drawable/rounded_corner4"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/img_parent_select_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/food_images" />

        <EditText
            android:id="@+id/txv_parent_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/text_box"
            android:gravity="left|center"
            android:layout_marginRight="2dp"
            android:hint="@string/rf_admin_ed_name"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/txv_parent_discription"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/text_box"
            android:gravity="left|center"
            android:layout_marginRight="2dp"
            android:hint="@string/rf_admin_tv_add_description"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spiner_parent_vag_nonvag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/sp_box"
            android:gravity="left|center"
            android:hint="@string/rf_admin_add_tv_food_code"
            android:paddingLeft="5dp"
            android:layout_marginRight="2dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spiner_parent_spicy_level"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/sp_box"
            android:gravity="left|center"
            android:layout_marginRight="2dp"
            android:hint="@string/rf_admin_add_tv_food_code"
            android:paddingLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spiner_parent_spicy_level_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/sp_box"
            android:gravity="left|center"
            android:hint="@string/rf_admin_tv_add_food_test_type"
            android:paddingLeft="5dp"
            android:layout_marginRight="2dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spiner_parent_spicy_available"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/sp_box"
            android:gravity="left|center"
            android:hint="@string/rf_admin_tv_add_food_test_type"
            android:paddingLeft="5dp"
            android:layout_marginRight="2dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/txv_parent_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/text_box"
            android:gravity="left|center"
            android:hint="@string/rf_admin_add_food_tv_price"
            android:inputType="numberDecimal"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/img_parent_add_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:src="@drawable/add_button" />
    </LinearLayout>

</LinearLayout>