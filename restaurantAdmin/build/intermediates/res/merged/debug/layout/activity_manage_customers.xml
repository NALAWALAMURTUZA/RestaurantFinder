<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@drawable/rf_supper_admin_header_background"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/rf_supper_admin_home_icon"
            android:visibility="visible" />

        <TextView
            android:id="@+id/rf_supper_admin_header_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:text="@string/mc_title"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/rf_supper_admin_home_icon"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="90"
        android:padding="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp" >

            <AutoCompleteTextView
                android:id="@+id/mc_ed_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/rounded_corner3"
                android:drawableRight="@drawable/search"
                android:gravity="left|center"
                android:hint="@string/mc_search_hint"
                android:paddingLeft="5dp" />

            <Button
                android:id="@+id/btn_mc_genrate_invoice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/registration_background"
                android:text="@string/mc_pdf"
                android:textColor="#0c3f74"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="10"
            android:background="#eeeeee"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp" 
            >

          <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:background="@drawable/roundcorner_all_booking"
            android:gravity="center"
            android:text="@string/mc_Sr_No"
            android:textColor="#000000"
            android:textStyle="bold" />
            <TextView
                android:id="@+id/txv_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/roundcorner_all_booking"
                android:gravity="center"
                android:text="@string/mc_customer_name"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/roundcorner_all_booking"
                android:gravity="center"
                android:text="@string/mc_customer_phoneno"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/roundcorner_all_booking"
                android:gravity="center"
                android:text="@string/mc_customer_email"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/roundcorner_all_booking"
                android:gravity="center"
                android:text="@string/mc_customer_business"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/roundcorner_all_booking"
                android:gravity="center"
                android:text="@string/mc_customer_ordertype"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/roundcorner_all_booking"
                android:gravity="center"
                android:text="@string/mc_customer_lastbooking"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/roundcorner_all_booking"
                android:gravity="center"
                android:text="@string/mc_customer_action"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
           
            android:background="@drawable/rounded_corner7"
            android:orientation="horizontal" >

            <ListView
                android:id="@+id/lv_customer_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:visibility="visible"
                >
            </ListView>
            
            <TextView
                android:id="@+id/txv_invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:text="@string/mc_nodata"
                android:textSize="24sp"
                android:gravity="center" >
            </TextView>
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/workspace/RestaurantFinder/restaurantAdmin/src/main/res/layout/activity_manage_customers.xml -->