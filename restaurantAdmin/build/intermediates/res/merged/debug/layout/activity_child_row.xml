<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <!-- Header aligned to top -->


        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_corner6"
            android:orientation="horizontal"
            android:gravity="center" >

            <TextView
                android:id="@+id/rf_admin_child_food_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Pizza"
                android:hint="@string/rf_admin_add_food_tv_price"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="20sp" />
            
                 <TextView
                android:id="@+id/rf_admin_child_description"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/rf_admin_tv_add_food_italian_food"
                android:text="Italian food"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:singleLine="true"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rf_admin_child_uid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="RF5412"
                android:hint="@string/rf_admin_add_food_rf_5412"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="20sp" />
            
                 <TextView
                android:id="@+id/rf_admin_child_food_categories"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/rf_admin_tv_add_food_spicy"
                android:text="Spicy"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rf_admin_child_food_level"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Level 1"
                android:hint="@string/rf_admin_tv_add_food_level_1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="20sp" />
              <TextView
                android:id="@+id/rf_admin_child_available"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:hint="@string/rf_admin_tv_add_food_level_1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="20sp" />
                 <TextView
                android:id="@+id/rf_admin_child_prices"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/rf_admin_tv_add_food_prices"
                android:text="\u20ac 2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="20sp" />
                

                   <ImageView
                       android:id="@+id/child_update"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.8"
                       android:padding="10dp"
                       android:src="@drawable/action_icons" />
                   
                   <ImageView
                       android:id="@+id/child_delete"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.2"
                          android:padding="10dp"
                       android:src="@drawable/delete_icon" 
                       android:visibility="invisible"/>
            
        </LinearLayout>
        
        


</LinearLayout><!-- From: file:/D:/workspace/RestaurantFinder/restaurantAdmin/src/main/res/layout/activity_child_row.xml -->