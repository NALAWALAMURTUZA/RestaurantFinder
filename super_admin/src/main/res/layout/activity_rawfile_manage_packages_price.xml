<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ffffff"
	android:orientation="vertical" >

	<!-- Header aligned to top -->

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:background="@drawable/rounded_corner4"
		android:orientation="horizontal" >

		<TextView
			android:id="@+id/rf_supper_admin_txv_time"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1.7"
			android:text="12:30 :"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#ffffff"
			android:textSize="20sp" />

		<TextView
			android:id="@+id/rf_supper_admin_txv_restbiofrench"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="10"
			android:text="@string/rf_supper_admin_txv_restbiofrench"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#ffffff"
			android:textSize="20sp" />

		<ImageView
			android:id="@+id/img_menu"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="left|center"
			android:layout_weight="1"
			android:src="@drawable/plush_icon"
			android:visibility="visible" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="10dp"
		android:layout_weight="10"
		android:orientation="vertical" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:background="@drawable/rounded_corner3"
			android:orientation="horizontal" >

			<TextView
				android:id="@+id/rf_supper_admin_txv_packages"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:text="@string/rf_supper_admin_txv_packages"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="#000000"
				android:textSize="20sp" />

			<TextView
				android:id="@+id/rf_supper_admin_txv_free"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="3"
				android:text="@string/supper_admin_txv_free"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="#398017"
				android:textSize="20sp" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:background="@drawable/rounded_corner3"
			android:orientation="horizontal" >

			<TextView
				android:id="@+id/rf_supper_admin_txv_status"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:text="@string/rf_supper_admin_txv_status"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="#000000"
				android:textSize="20sp" />

			<TextView
				android:id="@+id/rf_supper_admin_txv_processed"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="3"
				android:text="@string/rf_supper_admin_txv_processed"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="#000000"
				android:textSize="20sp" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:background="@drawable/rounded_corner3"
			android:orientation="horizontal" >

			<TextView
				android:id="@+id/rf_supper_admin_txv_approved"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:text="@string/rf_supper_admin_txv_approved"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="#000000"
				android:textSize="20sp" />

			<TextView
				android:id="@+id/rf_supper_admin_txv_waiting"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="3"
				android:text="@string/rf_supper_admin_txv_waiting"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="#000000"
				android:textSize="20sp" />
		</LinearLayout>
	</LinearLayout>

</LinearLayout>