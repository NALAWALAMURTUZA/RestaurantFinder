<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/rf_login_img_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@drawable/rf_supper_admin_header_background"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/rf_login_img_header_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="3"
            android:src="@drawable/rf_supper_admin_home_icon" />

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/rf_supper_admin_txv_invoice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:text="@string/gi_title_request"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="2"
            android:src="@drawable/ic_launcher"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/ic_launcher"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#eeeeee"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_restaurant_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/roundcorner_all_booking"
            android:gravity="center"
            android:text="@string/gi_rest_name"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_contact_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/roundcorner_all_booking"
            android:gravity="center"
            android:text="@string/str_contact_number"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_contact_email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/roundcorner_all_booking"
            android:gravity="center"
            android:text="@string/contact_gi_email" />

        <TextView
            android:id="@+id/txt_datel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/roundcorner_all_booking"
            android:gravity="center"
            android:text="@string/package_date" />

        <TextView
            android:id="@+id/txt_current_package"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/roundcorner_all_booking"
            android:gravity="center"
            android:text="@string/str_current_package" />

        <TextView
            android:id="@+id/txt_requested_package"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/roundcorner_all_booking"
            android:gravity="center"
            android:text="@string/str_requested_package"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_package_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/roundcorner_all_booking"
            android:gravity="center"
            android:text="@string/str_package_amount" />

        <TextView
            android:id="@+id/txt_decline_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/roundcorner_all_booking"
            android:gravity="center"
            android:text="@string/str_decline_button"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_approve_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/roundcorner_all_booking"
            android:gravity="center"
            android:text="@string/str_approve_button"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:background="@drawable/rounded_corner7"
        android:orientation="horizontal" >
	   <TextView
                android:id="@+id/txv_invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:text="@string/mc_nodata"
                android:textSize="24sp"
                android:gravity="center" >
            </TextView>
        <ListView
            android:id="@+id/lv_request_update_pack"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>
    </LinearLayout>

</LinearLayout>